    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/feed_feedback_background_pressed_start_color" />
            <corners android:bottomLeftRadius="@dimen/corner_size" android:bottomRightRadius="@dimen/corner_size" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/feed_feedback_background_color" />
            <corners android:bottomLeftRadius="@dimen/corner_size" android:bottomRightRadius="@dimen/corner_size" />
        </shape>
    </item>
</selector>