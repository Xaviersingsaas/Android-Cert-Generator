<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/reaction_card_corner_size" android:topRightRadius="@dimen/reaction_card_corner_size" />
            <solid android:color="@color/fbui_white" />
            <stroke android:width="@dimen/reaction_border_width" android:color="@color/fbui_border_light" />
        </shape>
    </item>
    <item android:left="@dimen/reaction_border_width" android:top="@dimen/reaction_border_width" android:right="@dimen/reaction_border_width">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/reaction_card_corner_size" android:topRightRadius="@dimen/reaction_card_corner_size" />
            <solid android:color="@color/fbui_white" />
        </shape>
    </item>
</layer-list>