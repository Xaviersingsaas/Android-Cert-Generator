<?xml version="1.0" encoding="utf-8"?>
<selector android:variablePadding="false"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="true">
        <shape>
            <solid android:color="@color/fbui_btn_light_primary_bg_pressed" />
            <stroke android:width="@dimen/one_dp" android:color="@color/fbui_btn_light_primary_stroke_pressed" />
            <corners android:radius="@dimen/group_add_files_button_radius" />
            <padding android:left="@dimen/fbui_button_padding_left_small" android:top="@dimen/fbui_button_padding_top_small" android:right="@dimen/fbui_button_padding_right_small" android:bottom="@dimen/fbui_button_padding_bottom_small" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape>
            <solid android:color="@color/fbui_btn_light_primary_bg_default" />
            <stroke android:width="@dimen/one_dp" android:color="@color/fbui_accent_blue" />
            <corners android:radius="@dimen/group_add_files_button_radius" />
            <padding android:left="@dimen/fbui_button_padding_left_small" android:top="@dimen/fbui_button_padding_top_small" android:right="@dimen/fbui_button_padding_right_small" android:bottom="@dimen/fbui_button_padding_bottom_small" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <solid android:color="@color/fbui_btn_light_primary_bg_default" />
            <stroke android:width="@dimen/one_dp" android:color="@color/fbui_btn_light_primary_stroke_disabled" />
            <corners android:radius="@dimen/group_add_files_button_radius" />
            <padding android:left="@dimen/fbui_button_padding_left_small" android:top="@dimen/fbui_button_padding_top_small" android:right="@dimen/fbui_button_padding_right_small" android:bottom="@dimen/fbui_button_padding_bottom_small" />
        </shape>
    </item>
</selector>