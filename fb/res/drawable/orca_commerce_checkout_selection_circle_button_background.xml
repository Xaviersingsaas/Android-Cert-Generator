<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/commerce_checkout_selection_circle_button_stoke_width" android:color="@color/commerce_checkout_selection_button_disabled_stroke" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="oval">
            <stroke android:width="@dimen/commerce_checkout_selection_circle_button_stoke_width" android:color="@color/commerce_checkout_selection_button_selected_stroke" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="oval">
            <stroke android:width="@dimen/commerce_checkout_selection_circle_button_stoke_width" android:color="@color/commerce_checkout_selection_button_enabled_stroke" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <stroke android:width="@dimen/commerce_checkout_selection_circle_button_stoke_width" android:color="@color/commerce_checkout_selection_button_pressed_stroke" />
        </shape>
    </item>
</selector>