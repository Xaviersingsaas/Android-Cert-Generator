<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/fbui_bluegrey_10" />
            <stroke android:width="1.0dip" android:color="@color/fbui_text_light" />
            <corners android:radius="2.0dip" />
            <padding android:left="@dimen/fbui_button_padding_right_large" android:top="@dimen/fbui_button_padding_top_small" android:right="@dimen/fbui_button_padding_right_large" android:bottom="@dimen/fbui_button_padding_bottom_small" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/transparent" />
            <stroke android:width="1.0dip" android:color="@color/fbui_text_light" />
            <corners android:radius="2.0dip" />
            <padding android:left="@dimen/fbui_button_padding_left_medium" android:top="@dimen/fbui_button_padding_top_small" android:right="@dimen/fbui_button_padding_right_medium" android:bottom="@dimen/fbui_button_padding_bottom_small" />
        </shape>
    </item>
</selector>