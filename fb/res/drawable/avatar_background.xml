<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/fbui_bluegrey_2" />
            <size android:height="@dimen/awesomizer_avatar_size" android:width="@dimen/awesomizer_avatar_size" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="@dimen/awesomizer_smallest_thickness" android:color="@color/four_percent_alpha_black" />
            <size android:height="@dimen/awesomizer_avatar_size" android:width="@dimen/awesomizer_avatar_size" />
        </shape>
    </item>
    <item android:id="@id/awesomizer_avatar_border">
        <shape android:shape="oval">
            <stroke android:width="@dimen/awesomizer_avatar_border_thickness" android:color="@color/fbui_white" />
            <padding android:left="@dimen/awesomizer_avatar_border_padding" android:top="@dimen/awesomizer_avatar_border_padding" android:right="@dimen/awesomizer_avatar_border_padding" android:bottom="@dimen/awesomizer_avatar_border_padding" />
        </shape>
    </item>
</layer-list>