<?xml version="1.0" encoding="utf-8"?>
<selector android:variablePadding="false"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/fbui_btn_light_regular_bg_pressed" />
            <stroke android:width="1.0dip" android:color="@color/fbui_btn_light_regular_stroke_pressed" />
            <padding android:left="@dimen/fbui_button_padding_left_medium" android:top="@dimen/fbui_button_padding_top_medium" android:right="@dimen/fbui_button_padding_right_medium" android:bottom="@dimen/fbui_button_padding_bottom_medium" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/fbui_btn_light_regular_bg_default" />
            <stroke android:width="1.0dip" android:color="@color/fbui_btn_light_regular_stroke_default" />
            <padding android:left="@dimen/fbui_button_padding_left_medium" android:top="@dimen/fbui_button_padding_top_medium" android:right="@dimen/fbui_button_padding_right_medium" android:bottom="@dimen/fbui_button_padding_bottom_medium" />
        </shape>
    </item>
</selector>