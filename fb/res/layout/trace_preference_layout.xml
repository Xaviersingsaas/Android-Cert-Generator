<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:id="@id/control_view" android:layout_width="wrap_content" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.facebook.resources.ui.FbEditText android:id="@id/perfName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:hint="@string/perfname_hint" android:inputType="text" />
